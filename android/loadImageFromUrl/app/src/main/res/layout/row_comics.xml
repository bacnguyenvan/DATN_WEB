<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >


    <ImageView
        android:id="@+id/imgComic"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="140dp"
        android:layout_height="160dp"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:text="Corona viruts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/imgComic"
        android:padding="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tvCategory"
        android:text="Adventure"
        android:layout_toRightOf="@id/imgComic"
        android:layout_below="@id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />
     <RelativeLayout
         android:id="@+id/evaluate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/imgComic"
         android:layout_below="@+id/tvCategory"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/layout_bg"
         >

         <ImageView
             android:id="@+id/imgStart"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/start_icon2" />

         <TextView
             android:layout_toRightOf="@id/imgStart"
             android:text="8.3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:textColor="#fff"
             android:textStyle="bold"
             android:paddingTop="6dp"
             />
     </RelativeLayout>

    <TextView
        android:id="@+id/tvAuthor"
        android:text="Gala shiki"
        android:layout_toRightOf="@id/imgComic"
        android:layout_below="@+id/evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />
</RelativeLayout>